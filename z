  <script>
    // Create falling snowflakes
    const flakesContainer = document.getElementById('flakes');
    const flakes = "❄ ❅ ❆".split(" ");
    const count = 36; // adjust for more/less snow

    for(let i=0;i<count;i++){
      const span = document.createElement('span');
      span.className = 'snowflake';
      span.textContent = flakes[Math.floor(Math.random()*flakes.length)];
      span.style.left = Math.random()*100 + 'vw';
      span.style.opacity = (0.5 + Math.random()*0.5).toFixed(2);
      span.style.fontSize = (0.8 + Math.random()*1.6).toFixed(2) + 'rem';
      const fallDur = 8 + Math.random()*10;
      const swayDur = 3 + Math.random()*5;
      span.style.animationDuration = fallDur + 's, ' + swayDur + 's';
      span.style.animationDelay = (-Math.random()*fallDur) + 's, ' + Math.random()*2 + 's';
      flakesContainer.appendChild(span);
    }
  </script>
